{% comment %}
  Section: Use Cases & Benefits — Magic Wand® Micro HV-60
  - Two-column responsive grid (stacks on mobile)
  - Left = Use Cases (blocks)
  - Right = Benefits (blocks)
  - Optional CTA button
  - Color + spacing controls
  - Lightweight inline SVG icons (selectable per block)
{% endcomment %}

<section
  id="ucb-{{ section.id }}"
  class="ucb ucb-{{ section.id }}"
  style="
    --ucb-bg: {{ section.settings.bg | default: '#ffffff' }};
    --ucb-grad-a: {{ section.settings.grad_a | default: '#ffffff' }};
    --ucb-grad-b: {{ section.settings.grad_b | default: '#ffffff' }};
    --ucb-text: {{ section.settings.text_color | default: '#222222' }};
    --ucb-accent: {{ section.settings.accent | default: '#7c3aed' }};
    --ucb-card-bg: {{ section.settings.card_bg | default: '#ffffff' }};
    --ucb-card-border: {{ section.settings.card_border | default: '#e5e7eb' }};
    --ucb-radius: {{ section.settings.radius | default: 16 }}px;
    --ucb-gap: {{ section.settings.gap | default: 20 }}px;
    --ucb-pad: {{ section.settings.pad | default: 28 }}px;
  "
>
  <div class="ucb__inner {% if section.settings.use_gradient %}ucb--gradient{% endif %}">
    {% if section.settings.pretitle != blank %}
      <div class="ucb__pretitle">{{ section.settings.pretitle }}</div>
    {% endif %}

    {% if section.settings.title != blank %}
      <h2 class="ucb__title">{{ section.settings.title }}</h2>
    {% endif %}

    {% if section.settings.subtitle != blank %}
      <p class="ucb__subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}

    <div class="ucb__grid {% if section.settings.swap_columns %}ucb--swap{% endif %}">
      <!-- Left column: Use Cases -->
      <div class="ucb__col">
        {% if section.settings.left_title != blank %}
          <h3 class="ucb__col-title">{{ section.settings.left_title }}</h3>
        {% endif %}

        <ul class="ucb__list">
          {% for block in section.blocks %}
            {% if block.type == 'use_case' %}
              <li class="ucb__item" {{ block.shopify_attributes }}>
                <div class="ucb__icon">
                  {% case block.settings.icon %}
                    {% when 'relax' %}
                      <!-- face/massage -->
                      <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M12 2a7 7 0 0 0-7 7v2a7 7 0 1 0 14 0V9a7 7 0 0 0-7-7Zm0 18a5 5 0 0 1-5-5v-1h10v1a5 5 0 0 1-5 5Z"/></svg>
                    {% when 'travel' %}
                      <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M10 3h4a2 2 0 0 1 2 2v2h3a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V9a2 2 0 0 1 2-2h3V5a2 2 0 0 1 2-2Zm0 4h4V5h-4v2Z"/></svg>
                    {% when 'recovery' %}
                      <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M13 3a9 9 0 1 0 8.485 6H19a7 7 0 1 1-6 3.874V16h2V9h-7v2h4.126A7 7 0 0 1 5 5.757V3.05A9 9 0 0 0 13 3Z"/></svg>
                    {% when 'pleasure' %}
                      <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M12 21s-6.5-4.35-9.33-8.17C.86 10.39 2.2 7 5.2 7c1.9 0 3.08 1.2 3.8 2.33C9.72 8.2 10.9 7 12.8 7c3 0 4.34 3.39 2.53 5.83C18.5 16.65 12 21 12 21Z"/></svg>
                    {% when 'custom' %}
                      {{ block.settings.custom_svg }}
                    {% else %}
                      <!-- default check -->
                      <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M9 16.17 4.83 12 3.41 13.41 9 19l12-12-1.41-1.41z"/></svg>
                  {% endcase %}
                </div>
                <div class="ucb__content">
                  <div class="ucb__item-title">{{ block.settings.title }}</div>
                  {% if block.settings.text != blank %}
                    <div class="ucb__item-text">{{ block.settings.text }}</div>
                  {% endif %}
                </div>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>

      <!-- Right column: Benefits -->
      <div class="ucb__col">
        {% if section.settings.right_title != blank %}
          <h3 class="ucb__col-title">{{ section.settings.right_title }}</h3>
        {% endif %}

        <ul class="ucb__list">
          {% for block in section.blocks %}
            {% if block.type == 'benefit' %}
              <li class="ucb__item" {{ block.shopify_attributes }}>
                <div class="ucb__icon">
                  {% case block.settings.icon %}
                    {% when 'power' %}
                      <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M13 3h-2v10h2V3Zm-1 18A9 9 0 0 1 5.64 6.64l1.41 1.41A7 7 0 1 0 17 8.05l1.41-1.41A9 9 0 0 1 12 21Z"/></svg>
                    {% when 'battery' %}
                      <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M16 7H3a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h13a2 2 0 0 0 2-2v-1h2v-4h-2V9a2 2 0 0 0-2-2Z"/></svg>
                    {% when 'motor' %}
                      <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M3 10h8l2-2h6a2 2 0 0 1 2 2v4a2 2 0 0 1-2 2h-6l-2-2H3v-4Z"/></svg>
                    {% when 'silicone' %}
                      <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M12 2a5 5 0 0 1 5 5c0 4-5 8-5 8s-5-4-5-8a5 5 0 0 1 5-5Z"/></svg>
                    {% when 'rpm' %}
                      <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M12 2a10 10 0 1 0 10 10H20A8 8 0 1 1 12 4v6h6A10 10 0 0 0 12 2Z"/></svg>
                    {% when 'patterns' %}
                      <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M4 6h16v2H4V6Zm0 5h10v2H4v-2Zm0 5h16v2H4v-2Z"/></svg>
                    {% when 'warranty' %}
                      <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M12 2 4 5v6c0 5 3.4 9.7 8 11 4.6-1.3 8-6 8-11V5l-8-3Zm0 5 1.76 3.56L18 11l-3 2.92L15.52 18 12 16.3 8.48 18 9 13.92 6 11l4.24-.44L12 7Z"/></svg>
                    {% when 'compact' %}
                      <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M7 3h10a2 2 0 0 1 2 2v14l-7-3-7 3V5a2 2 0 0 1 2-2Z"/></svg>
                    {% when 'custom' %}
                      {{ block.settings.custom_svg }}
                    {% else %}
                      <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M9 16.17 4.83 12 3.41 13.41 9 19l12-12-1.41-1.41z"/></svg>
                  {% endcase %}
                </div>
                <div class="ucb__content">
                  <div class="ucb__item-title">{{ block.settings.title }}</div>
                  {% if block.settings.text != blank %}
                    <div class="ucb__item-text">{{ block.settings.text }}</div>
                  {% endif %}
                </div>
              </li>
            {% endif %}
          {% endfor %}
        </ul>

        {% if section.settings.cta_label != blank and section.settings.cta_url != blank %}
          <a class="ucb__btn" href="{{ section.settings.cta_url }}" {% if section.settings.cta_newtab %}target="_blank" rel="noopener"{% endif %}>
            {{ section.settings.cta_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>

  <style>
    .ucb { color: var(--ucb-text); background: var(--ucb-bg); }
    .ucb--gradient { 
      background: linear-gradient(135deg, var(--ucb-grad-a), var(--ucb-grad-b)); 
    }
    .ucb__inner { max-width: 1200px; margin: 0 auto; padding: var(--ucb-pad); }
    .ucb__pretitle { font-size: 12px; letter-spacing: .08em; text-transform: uppercase; opacity: .8; margin-bottom: 6px; }
    .ucb__title { font-size: 32px; line-height: 1.2; margin: 0 0 8px; }
    .ucb__subtitle { font-size: 16px; opacity: .9; margin: 0 0 24px; }

    .ucb__grid { display: grid; grid-template-columns: 1fr 1fr; gap: var(--ucb-gap); }
    .ucb__grid.ucb--swap { direction: rtl; }
    .ucb__grid.ucb--swap > * { direction: ltr; }

    .ucb__col { background: var(--ucb-card-bg); border: 1px solid var(--ucb-card-border); border-radius: var(--ucb-radius); padding: 20px; }
    .ucb__col-title { font-size: 20px; margin: 0 0 12px; }

    .ucb__list { list-style: none; margin: 0; padding: 0; display: grid; gap: 12px; }
    .ucb__item { display: grid; grid-template-columns: 40px 1fr; align-items: start; gap: 12px; padding: 12px; border: 1px solid var(--ucb-card-border); border-radius: calc(var(--ucb-radius) - 6px); }
    .ucb__icon { width: 40px; height: 40px; display: grid; place-items: center; border-radius: 50%; background: color-mix(in oklab, var(--ucb-accent) 12%, white); }
    .ucb__icon svg { width: 22px; height: 22px; fill: var(--ucb-accent); }
    .ucb__item-title { font-weight: 600; margin-bottom: 4px; }
    .ucb__item-text { opacity: .9; }

    .ucb__btn {
      display: inline-block; margin-top: 16px; padding: 12px 18px;
      background: var(--ucb-accent); color: #fff; border-radius: calc(var(--ucb-radius) - 8px);
      text-decoration: none; font-weight: 600;
    }
    .ucb__btn:hover { opacity: .95; }

    @media (max-width: 768px) {
      .ucb__grid { grid-template-columns: 1fr; }
      .ucb__title { font-size: 26px; }
    }
  </style>
</section>

{% schema %}
{
  "name": "Use Cases",
  "tag": "section",
  "class": "section ucb-wrap",
  "settings": [
    { "type": "text", "id": "pretitle", "label": "Pretitle (small overline)", "default": "How to Use & Why You'll Love It" },
    { "type": "text", "id": "title", "label": "Section Title", "default": "Why Choose the Magic Wand® Micro HV-60?" },
    { "type": "textarea", "id": "subtitle", "label": "Subtitle", "default": "Pocket-sized power with deep, rumbly vibrations and up to 3 hours of run time." },

    { "type": "header", "content": "Layout & Style" },
    { "type": "checkbox", "id": "use_gradient", "label": "Use gradient background", "default": true },
    { "type": "color", "id": "bg", "label": "Solid background (if gradient off)", "default": "#ffffff" },
    { "type": "color", "id": "grad_a", "label": "Gradient color A", "default": "#f8f5ff" },
    { "type": "color", "id": "grad_b", "label": "Gradient color B", "default": "#ffffff" },
    { "type": "color", "id": "text_color", "label": "Text color", "default": "#222222" },
    { "type": "color", "id": "accent", "label": "Accent color", "default": "#7c3aed" },
    { "type": "color", "id": "card_bg", "label": "Card background", "default": "#ffffff" },
    { "type": "color", "id": "card_border", "label": "Card border", "default": "#e5e7eb" },
    { "type": "range", "id": "radius", "label": "Corner radius (px)", "default": 16, "min": 0, "max": 32, "step": 1 },
    { "type": "range", "id": "gap", "label": "Grid gap (px)", "default": 20, "min": 8, "max": 40, "step": 1 },
    { "type": "range", "id": "pad", "label": "Section padding (px)", "default": 28, "min": 12, "max": 80, "step": 1 },
    { "type": "checkbox", "id": "swap_columns", "label": "Swap left/right columns", "default": false },

    { "type": "header", "content": "Column Titles" },
    { "type": "text", "id": "left_title", "label": "Left column title", "default": "Real-Life Use Cases" },
    { "type": "text", "id": "right_title", "label": "Right column title", "default": "Key Benefits" },

    { "type": "header", "content": "Button" },
    { "type": "text", "id": "cta_label", "label": "Button label", "default": "Shop Now" },
    { "type": "url", "id": "cta_url", "label": "Button link" },
    { "type": "checkbox", "id": "cta_newtab", "label": "Open in new tab", "default": false }
  ],
  "blocks": [
    {
      "type": "use_case",
      "name": "Use Case",
      "limit": 8,
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Muscle Relaxation" },
        { "type": "textarea", "id": "text", "label": "Description", "default": "Soothe neck, shoulder, or back tension after a long day." },
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "default": "relax",
          "options": [
            { "value": "relax", "label": "Relaxation" },
            { "value": "travel", "label": "Travel" },
            { "value": "recovery", "label": "Recovery" },
            { "value": "pleasure", "label": "Personal/Pleasure" },
            { "value": "custom", "label": "Custom SVG (below)" },
            { "value": "check", "label": "Check (default)" }
          ]
        },
        { "type": "textarea", "id": "custom_svg", "label": "Custom SVG (optional)", "info": "Paste raw <svg>…</svg>" }
      ]
    },
    {
      "type": "benefit",
      "name": "Benefit",
      "limit": 12,
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Authentic, ultra-compact design" },
        { "type": "textarea", "id": "text", "label": "Description", "default": "The legendary Magic Wand® in a portable form—easy to carry, hard to put down." },
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "default": "compact",
          "options": [
            { "value": "power", "label": "Power" },
            { "value": "battery", "label": "Battery" },
            { "value": "motor", "label": "Motor" },
            { "value": "silicone", "label": "Soft Silicone" },
            { "value": "rpm", "label": "Speed (RPM)" },
            { "value": "patterns", "label": "Patterns" },
            { "value": "warranty", "label": "Warranty/Shield" },
            { "value": "compact", "label": "Compact" },
            { "value": "custom", "label": "Custom SVG (below)" },
            { "value": "check", "label": "Check (default)" }
          ]
        },
        { "type": "textarea", "id": "custom_svg", "label": "Custom SVG (optional)", "info": "Paste raw <svg>…</svg>" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Use Cases & Benefits — Micro HV-60",
      "category": "Product",
      "blocks": [
        { "type": "use_case", "settings": { "title": "Muscle Relaxation", "text": "Soothe neck, shoulders, or back with deep, rumbly relief.", "icon": "relax" } },
        { "type": "use_case", "settings": { "title": "Personal Pleasure", "text": "Discreet yet powerful. Enjoy anywhere, anytime.", "icon": "pleasure" } },
        { "type": "use_case", "settings": { "title": "Travel Companion", "text": "Ultra-compact and USB-C rechargeable.", "icon": "travel" } },
        { "type": "use_case", "settings": { "title": "Post-Workout Recovery", "text": "Target sore spots to speed recovery.", "icon": "recovery" } },

        { "type": "benefit", "settings": { "title": "Surprisingly powerful vibrations", "text": "Deep, ‘magic’ rumbles that melt away tension.", "icon": "power" } },
        { "type": "benefit", "settings": { "title": "Up to 3 hours runtime", "text": "USB-C rechargeable battery for long sessions.", "icon": "battery" } },
        { "type": "benefit", "settings": { "title": "High-capacity motor & intuitive controls", "text": "Effortless switching between modes.", "icon": "motor" } },
        { "type": "benefit", "settings": { "title": "Soft silicone head & flexible neck", "text": "Comfort that adapts to your body.", "icon": "silicone" } },
        { "type": "benefit", "settings": { "title": "3 power levels up to 6,500 RPM", "text": "Dial in the intensity you want.", "icon": "rpm" } },
        { "type": "benefit", "settings": { "title": "4 vibration patterns", "text": "Choose your favorite rhythm.", "icon": "patterns" } },
        { "type": "benefit", "settings": { "title": "1-year warranty", "text": "Quality you can trust.", "icon": "warranty" } }
      ]
    }
  ]
}
{% endschema %}
